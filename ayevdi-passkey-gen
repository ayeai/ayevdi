mkdir -p ${HOME}/.ayevdi &&\
touch ${HOME}/.ayevdi &&\
mv ${HOME}/.ayevdi/ayepasskey ${HOME}/.ayevdi/ayepasskey_$(date +%s) &&\
read -sp 'Enter passphrase:' \
secret && echo ${secret} |\
gpg --batch --passphrase \$\(${USER}\$${GROUPS}\)\$$(hostid)\
--delete-secret-keys -c - |\
uuencode - > ${HOME}/.ayevdi/ayepasskey &&\
date | tr ' ' '_'
