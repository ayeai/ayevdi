sudo apt install docker.io
sudo systemctl enable docker

sudo usermod  -aG docker $USER
newgrp docker
mkdir -p /home/"$USER"/.docker
sudo chown "$USER":"$USER" /home/"$USER"/.docker -R
sudo chmod g+rwx "$HOME/.docker" -R

docker pull ayeai/ayevdi:1574823955

export ayeuid=$(expr $(id -u ${USER}) + 12345)
export ayecntr=ayevdi_${ayeuid}
docker container stop ${ayecntr}
docker container rm ${ayecntr}
docker run -p ${ayeuid}:6080 --name ${ayecntr} -dt ayeai/ayevdi:1574823955

#Manual
echo Execute "\"apt install expect sudo curl wget git -y && (curl -H 'Cache-Control: no-cache' https://raw.githubusercontent.com/ayeai/ayevdi/master/ayevdi-init | bash -) && exit\"" in the container 
docker exec -it ${ayecntr} /bin/bash
